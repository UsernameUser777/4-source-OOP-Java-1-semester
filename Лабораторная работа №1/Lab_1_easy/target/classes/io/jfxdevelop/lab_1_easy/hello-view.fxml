<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.jfxdevelop.lab_1_easy.HelloController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Конвертер температуры"/>
    <TextField fx:id="inputField" promptText="Введите температуру"/>
    <ComboBox fx:id="directionBox" prefWidth="200.0"/>
    <Button text="Конвертировать" onAction="#onConvertButtonClick"/>
    <Label fx:id="resultLabel"/>
</VBox>
