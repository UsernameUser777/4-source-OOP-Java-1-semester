<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.jfxdevelop.lab_6_easy.HelloController"
      spacing="10" alignment="CENTER" prefWidth="600" prefHeight="400">

    <TableView fx:id="studentTable" prefHeight="200" prefWidth="500">
        <columns>
            <TableColumn fx:id="nameColumn" text="Имя" prefWidth="150"/>
            <TableColumn fx:id="ageColumn" text="Возраст" prefWidth="100"/>
            <TableColumn fx:id="groupColumn" text="Группа" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Имя"/>
        <TextField fx:id="ageField" promptText="Возраст"/>
        <TextField fx:id="groupField" promptText="Группа"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Добавить" onAction="#onAddStudent"/>
        <Button text="Удалить выбранного" onAction="#onDeleteStudent"/>
    </HBox>
</VBox>
